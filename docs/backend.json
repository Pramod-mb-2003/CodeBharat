{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The unique user ID for the student."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address, used for authentication."
        },
        "credits": {
          "type": "number",
          "description": "The number of credits the user has."
        },
        "progress": {
          "type": "object",
          "description": "The user's progress in different interest categories."
        },
        "interests": {
          "type": "array",
          "description": "The user's selected interests.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["userId", "email"]
    }
  },
  "auth": {
    "providers": [
      "email-password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores public information about a user."
    }
  }
}
